<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Catalog</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h2>Image Catalog</h2>
    <form class="form-inline mb-4" action="{{ url_for('search_by_tag') }}" method="GET">
        <input class="form-control mr-sm-2" type="search" placeholder="Search by tag" name="tag">
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
    <div class="row">
        {% for image_id, image in catalog.items() %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{ url_for('serve_image', filename=image['image_path'].split('/')[-1]) }}" class="card-img-top" alt="{{ image['title'] }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ image['title'] }}</h5>
                        <p class="card-text">{{ image['description'] }}</p>
                        <a href="{{ url_for('image_details', image_id=image_id) }}" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
